<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - File Management System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/File_Mgr_EF_JWT3.styles.css" asp-append-version="true" />
</head>
<body class="bg-light">
    <header class="bg-primary text-white py-3 shadow">
        <div class="container d-flex justify-content-between align-items-center">
            <a class="navbar-brand text-white" asp-area="" asp-page="/Index">File Management System</a>
            <nav>
                <a class="btn btn-outline-light mx-2" asp-area="" asp-page="/Signup">Sign Up</a>
                <a class="btn btn-light" asp-area="" asp-page="/Login">Login</a>
            </nav>
        </div>
    </header>

    <div class="container mt-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted text-center py-3 mt-5">
        <div class="container">
            &copy; 2025 - File Management System | <a asp-area="" asp-page="/Privacy">Privacy Policy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>