@page
@model File_Mgr_EF_JWT3.Pages.RenameFileModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-warning text-dark text-center">
                    <h2><i class="bi bi-pencil"></i> Rename File</h2>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.Message))
                    {
                        <div class="alert alert-danger text-center">@Model.Message</div>
                    }

                    <form method="post">                        
                        <input type="hidden" name="FileId" value="@ViewContext.HttpContext.Request.Query["id"]" />

                        <div class="mb-3">
                            <label class="form-label"><i class="bi bi-file-earmark-text"></i> New File Name</label>
                            <input type="text" class="form-control" asp-for="NewFileName" required />
                        </div>

                        <button type="submit" class="btn btn-warning w-100">
                            <i class="bi bi-pencil-square"></i> Rename File
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>