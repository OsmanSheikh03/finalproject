@page
@model File_Mgr_EF_JWT3.Pages.LoginModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h2><i class="bi bi-person-circle"></i> Login</h2>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <label class="form-label"><i class="bi bi-envelope"></i> Email</label>
                            <input type="email" class="form-control" asp-for="Email" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label"><i class="bi bi-lock"></i> Password</label>
                            <input type="password" class="form-control" asp-for="Password" required />
                        </div>
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-box-arrow-in-right"></i> Login
                        </button>
                    </form>
                    <div class="text-center mt-3">
                        <a class="text-decoration-none" asp-page="/ForgotPassword">Forgot Password?</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert alert-danger mt-3 text-center">@Model.Message</div>
}