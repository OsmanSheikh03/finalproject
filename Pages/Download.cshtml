@page
@model File_Mgr_EF_JWT3.Pages.DownloadModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-secondary text-white text-center">
                    <h2><i class="bi bi-download"></i> Secure File Download</h2>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.Message))
                    {
                        <div class="alert alert-danger text-center">@Model.Message</div>
                    }

                    <form method="post" asp-page-handler="Download">
                        <input type="hidden" name="FileId" value="@ViewContext.HttpContext.Request.Query["id"]" />

                        <div class="mb-3">
                            <label class="form-label"><i class="bi bi-lock"></i> Enter File Password</label>
                            <input type="password" class="form-control" asp-for="EnteredPassword" required />
                        </div>

                        <button type="submit" class="btn btn-dark w-100">
                            <i class="bi bi-box-arrow-down"></i> Download File
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>